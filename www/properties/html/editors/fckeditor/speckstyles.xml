	<!-- Inline Styles -->

	<Style name="Subscript" element="sub" />
	<Style name="Superscript" element="sup" />
	
	<Style name="Big" element="big" />
	<Style name="Small" element="small" />
	<Style name="Typewriter" element="tt" />

